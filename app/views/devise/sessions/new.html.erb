<% title "Connexion" %>
<div class="connexion-backgrnd">
  <%= link_to root_path do %>
    <%= image_tag "logo-bird.png", class: "logo-white" %>
  <% end %>
  <div class="connexion_container">
    <H2 class="big-ttle beautiful-txt-color">Connexion</H2><br/>
    <div class="connex">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= image_tag "mail.png", class: "field-img2" %>
        <%= f.text_field :email, :placeholder => "Email", class: "basic-field top-field" %>
        <%= image_tag "key.png", class: "field-img2" %>
        <%= f.password_field :password , :placeholder => "Mot de passe", class: "basic-field bottom-field" %><br/><br/>
        <div class="need-val">
          <%= f.label :remember_me, class: "checkbox_inline" do %>
          <p class="custom-checkbox check-green"><%= f.check_box :remember_me %><span><%= image_tag "correct-symbol.png", alt: "checktag" %></span> Se souvenir de moi</p>
          <% end %>
        </div>
        <%= f.button :submit do %>
          CONNEXION<%= image_tag "arrow-right.png", class: "btn_arrow" %>
        <% end %>
      <% end %>
    </div>
    <div class="no_cpt"></br>
      <p class="small-span">Pas encore inscrit ? <%= link_to "Je m'inscris", authenticated_root_path(resource_name), class: "link_decoration" %></p>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Mot de passe oubliÃ© ?", new_confirmation_path(resource_name) %><br />
    <% end %>
  </div>
</div>
