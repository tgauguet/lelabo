<% title "Editer mon profil" %>
<div class="background-colr">
        <div class="lttl-white-bkgrnd">
            <h3>Editer mon profil</h3>
            <div class="arrow-container pls-up2"><div class="arrow-up pls-up"></div></div>
        </div>
        <div class="user_container">
            <%= form_for(resource, as: resource_name, url: user_path(:id), html: { method: :put }) do |f| %>
             <%= devise_error_messages! %>
                <h3>Informations personnelles</h3>
                <%= image_tag "dark4", class: "field-img" %><%= f.email_field :email, autofocus: true, :placeholder => "email", class: "basic-field2"  %><br/><br/>
                <%= image_tag "user77", class: "field-img" %><%= f.text_field :name, :placeholder => "Nom", class: "basic-field3"  %><!--
                --><%= f.text_field :firstname, :placeholder => "PrÃ©nom", class: "basic-field4"  %><br />
                <h3>Mot de passe</h3>
                <span>Modifier le mot de passe</span>
                <p><i>(laisser vide pour ne pas faire de modification)</i></p><br/>
                <%= image_tag "key122", class: "field-img" %><%= f.password_field :password, :autocomplete => "off",:placeholder => "Mot de passe", class: "basic-field3"  %><!--
                --><%= f.password_field :password_confirmation, :autocomplete => "off", :placeholder => "Confimation", class: "basic-field4"  %>
            	<br/><br/>
                <p class="checkout-btn btn-smaller btn-2sm"><%= f.submit "Enregistrer les modifications", class: "submit-style" %></p>
            <% end %>
        </div>
</div>
