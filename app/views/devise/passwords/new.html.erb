	  </div>
	  <div ><%= f.submit "Modifier le mot de passe" , :class=>"bouton7" %></div>
	  <p style="color:#444444;"><%= link_to "Se connecter", new_session_path(resource_name) %></p>
	<% end %>
</div>
</div>
</div>
