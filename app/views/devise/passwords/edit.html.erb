<% title "Modifier le mot de passe" %>
<% provide(:title, 'Nouveau mot de passe') %>
 <div class="container-fluid">
        <div class="contacter">
        <div>
          <% if @user.errors.any? %>
    <div class="error_messages">
      <h3>Formulaire invalide :</h3>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
        </div>
        </div>
        <div class="contact_page">

              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>
            <h3>Nouveau mot de passe</h3></br>

              <%= hidden_field_tag :email, @user.email %>

            <div class="input_last_text_required4">
              <%= f.password_field :password, :id=>"inscription_field2", :placeholder => "Mot de passe"%>
            </div>
            <div class="input_text_required4">
              <%= f.password_field :password_confirmation , :id=>"inscription_field2" , :placeholder => "Confirmation"%>
            </div>
              <%= f.submit "Modifier" , :class=>"bouton7"%>
            <div>
            </div>
          <% end %>
        </div>
      </div>
</div>
</div>