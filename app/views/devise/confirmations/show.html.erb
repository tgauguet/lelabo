<%= form_for(resource, as: resource_name, url: confirm_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :password, :placeholder => "Mot de passe", class: "basic-field" %>
    <%= f.text_field :password_confirmation, :placeholder => "Confirmation", class: "basic-field" %>
    <%= f.hidden_field :confirmation_token, value: @original_token %>
    <%= f.submit "Valider mon mot de passe", class: "btn cta-btn" %>
<% end %>