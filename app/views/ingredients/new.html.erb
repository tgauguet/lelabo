<% title "Ingrédients" %>
<div class="actions-cntnr">
	<!-- PUT HERE THE HTML CODE FOR SUNSPOT SOLR -->
	<div class="page-new-ttl action-cntnr">
		<h2>INGREDIENT<span class="hide">S</span></h2>
		<p class="standard-btn grey-btn ingredient-btn">+ CRÉER</p>
	</div>
	<div class="ingredient-form">
		<div class="action-cntnr page-new-ttl">
			<%= render "form", ingredient: @ingredient %>
		</div>
	</div>
	<br/>
	<div class="hide">
		<div class="ing-cntnr">
			<p class="sort-before"><%= sortable "Nom", "name" %></p>
			<p class="sort-before"><%= sortable "Date de création", "created_at" %></p>
			<p class="sort-before"><%= sortable "Catégorie", "category" %></p>
			<p class="sort-before"><%= sortable "Date de modification", "updated_at" %></p>
			<p class="sort-before"><%= sortable "Biologique", "is_bio" %></p>
			<p class="sort-before"><%= sortable "Gluten", "is_glut_free" %></p>
		</div>
				<ul class="list-cntnr">
					<li id="sortable1">
						<% unless @ingredients.nil? %>
							<%= render @ingredients%>
						<% end %>
					</li>
				</ul>
				<%= will_paginate @ingredients %>
</div>
<script>
	$(".ingredient-btn").click(function(){
		$(".ingredient-form").show();
		$('.hide').hide();
	});
	$(".cancel-btn").click(function(){
		$(".ingredient-form").hide();
		$('.hide').show();
	});
</script>
