// clear form fields when an ingredient is created
$('#clear_form').find("input[type=text], text").val("")

// scroll to load next page ingredients with will_paginate
$('#sortable1').append('<%= escape_javascript render(@ingredients) %>');
$('.pagination').replaceWith('<%= escape_javascript will_paginate %>');

$(document).ready(function(){
  $(".ingredient-btn").click(function(){
    $(".ingredient-form").show();
  });
  $(".cancel-btn").click(function(){
    $(".ingredient-form").hide();
  });
});

$(document).ready(ready);
/**
 * if using turbolinks
 */
$(document).on('page:load', ready);
$(document).on('page:change', ready);
