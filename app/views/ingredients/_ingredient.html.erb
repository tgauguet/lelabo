	<%= link_to ingredient_path(ingredient) do %>
			<div class="line-cntnr">
			 <div class="major-td">
 				 <%= truncate(ingredient.name.humanize, length: 35) %>
 			 </div>
 			 <div class="basic-td">
				 <% unless price_is_nil(ingredient) %>
					 <%= number_to_currency ingredient.price %>
				 <% end %>
 			 </div>
			 <div class="basic-td">
				 <% if ingredient.category_id && ingredient.category_id > 0 %><%= Category.find(ingredient.category_id).name %><% end %>
			 </div>
