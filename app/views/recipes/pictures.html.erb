<% title "#{@recipe.name.humanize}" %>
<div class="ttl-header recipe-ttl">
	<div class="page-ttl">
    <h1 class="lttl-intro-h1"><%= @recipe.name.humanize %></h1>
		<p class="lft-p">Images & process de la recette</p>
  </div>
  <div class="page-ctas">
    <%= link_to recipes_path do %>
      <p class="standard-btn grey-btn ingredient-btn"><%= image_tag "arrow-left.png", class: "btn_arrow" %> INDEX</p>
    <% end %>
	</div>
</div>
<div class="rec-rgt-menu">
	<div class="rgt-area">
		<%= render "recipe_bar" %>
	</div>
</div>
<div class="action-cntnt">
  <div class="actions-cntnr">
    <div class="rec-cntnr">
    <div class="recipe_pics">
      <%= form_for(@recipe, remote: true) do |f| %>
        <% @recipe.images.each_with_index do |image, index| %>
          <%= f.fields_for :images, image do |ff| %>
            <%= render "add_images", ff: ff, image: image %>
          <% end %>
        <% end %>
        <br/>
        <div class="add_img"><%= create_new_field "+ AJOUTER UNE IMAGE", f, :images %></div>
        <%= f.submit "ENREGISTRER", class: "auto-btn cta-btn" %>
      <% end %>
    </div>
  </div>
</div>
