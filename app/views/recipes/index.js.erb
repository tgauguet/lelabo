// scroll to load next page ingredients with will_paginate
$('#sortable1').append('<%= escape_javascript render(@recipes) %>');
$('.pagination').replaceWith('<%= escape_javascript will_paginate %>');

$(document).ready(ready);
/**
 * if using turbolinks
 */
$(document).on('page:load', ready);
$(document).on('page:change', ready);

$(document).click(function(e){
  if (e.target.class != ".show-sort" && !$('.show-sort').find(e.target).length){
    if (e.target.class != ".sort-paths" && !$('.sort-paths').find(e.target).length){
      $(".sort-paths").hide();
    }
  }
});
