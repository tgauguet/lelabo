<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions smpl2-cntnr">
    <p>Informations</p>
    <%= image_tag "title.png", class: "field-img2" %>
    <%= f.text_field :name, class: "basic-field top-field" , placeholder: "Titre" %>
    <%= image_tag "description.png", class: "field-img2" %>
    <%= f.text_area :note, class: "basic-field middle-field", placeholder: "Notes" %>
    <%= image_tag 'user.png', class: "field-img2" %>
    <%= f.text_field :owner, class: "basic-field bottom-field", placeholder: "Auteur", value: user_if_nil(@recipe) %>
    <br/>
    <p>Image</p>
    <%= image_tag(@recipe.image.url(:medium), class: "user-img") %>
    <%= f.file_field :image %>
    <br/><br/>
    <p>Ingredients</p>
    <div class="ingredients-add-ctnr">
      <div class="add_ingredients">
        <%= f.fields_for :quantities do |ff| %>
          <%= render "add_quantities", ff: ff %>
        <% end %>
      </div>
    </div>
    <div class="add_field"><%= create_new_field "+", f, :quantities %></div>
    <%= image_tag "baking.png", class: "field-img2" %>
    <%= f.text_field :baking, class: "basic-field rounded-field", placeholder: "cuisson" %>
    <div class="select-areas">
      <%= image_tag "category.png", class: "field-img2" %>
      <%= f.select :category, ["Biscuit", "Chocolat", "Glace", "Ganache", "Confiserie"], include_blank: true, class: "rounded-field" %>
    </div><br/>
    <div data-no-turbolink>
      <p>Procédé</p>
      <%= f.cktext_area :process, ckeditor: { toolbar: "mini" }, placeholder: "procédé", class: "basic-field rounded-field ckeditor" %>
    </div>
    <br/>
    <% if current_page?(action: "new") %>
      <%= f.submit "Créer", class: "btn cta-btn" %>
    <% else %>
      <%= f.submit "Enregistrer", class: "btn, cta-btn" %>
    <% end %>
  </div>
<% end %>
