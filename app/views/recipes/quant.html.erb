<% title "#{@recipe.name.humanize}" %>
<div class="ttl-header recipe-ttl">
	<div class="page-ttl">
    <h1 class="lttl-intro-h1"><%= @recipe.name.humanize %></h1>
		<p class="lft-p">Quantités de la recette</p>
  </div>
  <div class="page-ctas">
    <%= link_to recipes_path do %>
      <p class="standard-btn grey-btn ingredient-btn"><%= image_tag "arrow-left.png", class: "btn_arrow" %> INDEX</p>
    <% end %>
	</div>
</div>
<div class="rec-rgt-menu">
	<div class="rgt-area">
		<%= render "recipe_bar" %>
	</div>
</div>
<div class="action-cntnt">
  <div class="actions-cntnr">
    <div class="rec-cntnr">
			<div class="recipe-links">
				<p class="tab">
    			<%= image_tag "little-table.png", class: "mini-mini-img" %> Tableau de calculs
    		</p>
        <p class="tab" style="display:none;">
    			<%= image_tag "measure.png", class: "mini-mini-img" %> Calcul de production
    		</p>
				<div class="q-f1">
					<%= link_to d_quantities_pdf_recipe_path(format: :pdf), target: '_blank' do %>
						<%= image_tag 'pdf2.png' , class: 'mini-mini-img'%> Enregistrer
					<% end %>
					<%= link_to quantities_pdf_recipe_path(format: :pdf), target: '_blank' do %>
						<%= image_tag 'pdf.png', class: 'mini-mini-img' %> Aperçu PDF
					<% end %>
				</div>
				<div class="q-f2" style="display:none;">
					<%= link_to d_quantities_array_pdf_recipe_path(format: :pdf), target: '_blank' do %>
						<%= image_tag 'pdf2.png' , class: 'mini-mini-img'%> Enregistrer
					<% end %>
					<%= link_to quantities_array_pdf_recipe_path(format: :pdf), target: '_blank' do %>
						<%= image_tag 'pdf.png', class: 'mini-mini-img' %> Aperçu PDF
					<% end %>
				</div>
			</div>
    <div class="q-forms">
      <div class="q-f1">
        <%= form_for(@recipe, remote: true) do |f| %>
        <div class="qt-bck blue-bckgrnd">
          <div class="prod-quantities">
            <h3>Quelle quantité produire ?</h3>
            <div class="clcl-mode">
              <div class="lfrd">
                <%= f.radio_button 'fast', true, id: "rad6" %>
                <label for="rad6" class="trigger2 lft-rd hide-meas" data-rel="tru">simple</label>
              </div>
              <div>
                <%= f.radio_button 'fast', false, id: "rad7" %>
                <label for="rad7" class="trigger2 rgt-rd hide-meas" data-rel="fal">stocks</label>
              </div>
            </div>
            <div class="tru content2 composition" style="<% if !@recipe.fast %>display:none;<% end %>">
							<p>À produire</p>
              <%= image_tag "hand.png", class: "field-img" %>
              <%= f.text_field :to_produce, class: "basic-field top-rad rounded-field hide-meas", placeholder:"Quantité..." %>
            </div>
            <div class="fal content2 composition" style="<% if @recipe.fast %>display:none;<% end %>">
							<div>
								<p>Stock</p>
	              <%= image_tag "stock.png", class: "field-img" %>
	              <%= f.text_field :stock, class: "basic-field top-rad rounded-field hide-meas", placeholder:"Quantité..." %>
							</div>
							<div>
								<p>À vendre</p>
	              <%= image_tag "sold.png", class: "field-img" %>
	              <%= f.text_field :sold, class: "basic-field top-rad rounded-field hide-meas", placeholder:"Quantité..." %>
						</div>
            </div>
            <br/><br/>
            <div class="basic-field rounded-field meas-env">
              <%= image_tag "measure.png", class: "field-img2 up-img" %>
              Unité de mesure : <%= @recipe.unit %>
              <span class="grey-btn pop-on">
        			     <%= image_tag "pencil.png", class: "mini-img", alt: "tableau" %> Modifier
          		</span>
            </div>
            <%= f.submit "CALCULER", class: "standard-btn grey-btn ingredient-btn fl-rgt yellow-btn" %>
          </div>
        </div>
        <div id="circleG" class="loading-indicator" style="display:none;">
          <br/><br/>
        	<div id="circleG_1" class="circleG"></div>
        	<div id="circleG_2" class="circleG"></div>
        	<div id="circleG_3" class="circleG"></div>
        </div>
        <div class="prod-quantities prod-quantities2 ajax-hide" >
          <h3>Recette pour <%= @recipe.to_product %> <%= @recipe.unit %> <%= @recipe.to_details %></h3>
          <div class="recipe-values">
            <div class="nth-ttl">
              <b><div class="r-q-name">Ingrédient</div>
              <div class="r-q-name2">Quantité</div>
              <div class="r-q-name2 r-q-name3">Unité</div></b>
            </div><br/>
            <% @recipe.quantities.each do |q| %>
              <div class="nth-chld">
                <div class="r-q-name"><%= q.ingredient.name %></div>
                <% if !(q.unit == "QS") %>
                  <div class="r-q-name2"><%= q.perfect_weight %></div>
                  <div class="r-q-name2 r-q-name3"><%= q.perfect_unit %></div>
                <% else %>
                  <div class="r-q-name2 qs-val"><%= q.perfect_unit %></div>
                <% end %>
              </div>
            <% end %>
            <% @recipe.sub_recipes.each do |s| %>
                <div class="nth-chld">
                  <div class="r-q-name"><%= current_user.recipes.find(s.sub_id).name %></div>
                  <div class="r-q-name2"><%= s.perfect_weight %></div>
                  <div class="r-q-name2 r-q-name3"><%= s.perfect_unit %></div>
                </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="q-f2" style="display:none;">
        <%= form_for(@recipe, remote: true) do |f| %>
          <div class="qt-bck blue-bckgrnd">
            <div class="array-bck" id="parent">
              <h3>Créer un tableau</h3>
              <p>Unité de mesure</p>
              <%= f.select :array_unit, ["g", "Kg"] %>
              <%= image_tag "sort-down-3.png", class: "mini-img sort-select" %>
              <p>Quantités à insérer</p>
              <%= f.fields_for :totals, @totals do |ff| %>
                <div class="kg-field">
                  <%= ff.text_field :value, class: 'basic-field recipe-comp-sel rounded-field kilo-field' %>
                </div>
              <% end %>
              <%= f.submit "CALCULER", class: "standard-btn grey-btn ingredient-btn fl-rgt array-btn yellow-btn", id: "array-btn" %>
            </div>
          </div>
					<div class="arrow-container"><div class="arrow-up"></div></div>
          <div class="quant_form prod-quantities2 prod-quantities">
            <div id="circleG" class="loading-indicator" style="display:none;">
              <br/><br/>
            	<div id="circleG_1" class="circleG"></div>
            	<div id="circleG_2" class="circleG"></div>
            	<div id="circleG_3" class="circleG"></div>
            </div>
            <br/>
            <div class="quant-values-cntnr ajax-hide">
              <div class="quant-values-clmn ing-line-cntnr">
                <div class="nth-ttl">
                  <b><div class="r-q-name">Ingrédient</div>
                  <div class="r-q-name2 r-q-name4 r-q-base">Base</div>
                  <div class="r-q-name2 r-q-name4"><%= @recipe.totals.first.value.to_f %> <%= @recipe.array_unit %></div>
                  <div class="r-q-name2 r-q-name4"><%= @recipe.totals.second.value.to_f %> <%= @recipe.array_unit %></div>
                  <div class="r-q-name2 r-q-name4"><%= @recipe.totals.third.value.to_f %> <%= @recipe.array_unit %></div>
                  <div class="r-q-name2 r-q-name4"><%= @recipe.totals.fourth.value.to_f %> <%= @recipe.array_unit %></div>
                </b>
                </div><br/>
                <% @recipe.quantities.each do |q| %>
                  <div class="nth-chld">
                    <div class="r-q-name"><%= q.ingredient.name %></div>
                    <div class="r-q-name2 r-q-name4"><%= q.weight %><div><%= q.unit %></div></div>
                    <div class="r-q-name2 r-q-name4"><%= q.perfect_array(@recipe.totals.first.value) %><div><%= q.perfect_array_unit(@recipe.totals.first.value) %></div></div>
                    <div class="r-q-name2 r-q-name4"><%= q.perfect_array(@recipe.totals.second.value) %><div><%= q.perfect_array_unit(@recipe.totals.second.value) %></div></div>
                    <div class="r-q-name2 r-q-name4"><%= q.perfect_array(@recipe.totals.third.value) %><div><%= q.perfect_array_unit(@recipe.totals.third.value) %></div></div>
                    <div class="r-q-name2 r-q-name4"><%= q.perfect_array(@recipe.totals.fourth.value) %><div><%= q.perfect_array_unit(@recipe.totals.fourth.value) %></div></div>
                  </div>
                <% end %>
                <% @recipe.sub_recipes.each do |s| %>
                    <div class="nth-chld">
                      <div class="r-q-name"><%= current_user.recipes.find(s.sub_id).name %></div>
                      <div class="r-q-name2 r-q-name4"><%= s.weight %><div>g</div></div>
                      <div class="r-q-name2 r-q-name4"><%= s.perfect_array(@recipe.totals.first.value) %><div><%= s.perfect_array_unit(@recipe.totals.first.value) %></div></div>
                      <div class="r-q-name2 r-q-name4"><%= s.perfect_array(@recipe.totals.second.value) %><div><%= s.perfect_array_unit(@recipe.totals.second.value) %></div></div>
                      <div class="r-q-name2 r-q-name4"><%= s.perfect_array(@recipe.totals.third.value) %><div><%= s.perfect_array_unit(@recipe.totals.third.value) %></div></div>
                      <div class="r-q-name2 r-q-name4"><%= s.perfect_array(@recipe.totals.fourth.value) %><div><%= s.perfect_array_unit(@recipe.totals.fourth.value) %></div></div>
                    </div>
                <% end %>
              </div>
              <br/>
            </div>
            <br/>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<%= render 'quantities_pop', recipe: @recipe %>
