<div class="recipe_pics">
  <%= form_for(@recipe, remote: true) do |f| %>
    <% @recipe.images.each_with_index do |image, index| %>
      <%= f.fields_for :images, image do |ff| %>
        <%= render "add_images", ff: ff, image: image %>
      <% end %>
    <% end %>
    <div class="add_field"><%= create_new_field "+", f, :images %></div>
    <%= f.submit "modifier" %>
  <% end %>
</div>
