<% title "Recettes partagées" %>
<div class="ttl-header">
	<%= render "layouts/ttl_header", title: "Recettes partagées", description:"Ajouter des recettes a votre carnet" %>
</div>
<div class="action-cntnt">
  <div class="actions-cntnr">
    <div class="action-cntnr page-new-ttl">
      <% @recipes.each do |recipe| %>
