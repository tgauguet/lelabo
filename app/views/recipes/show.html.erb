<% title "#{@recipe.name.humanize}" %>
<div class="ttl-header">
	<div class="page-ttl">
		<h1 class="lttl-intro-h1"><%= @recipe.name.humanize %></h1>
	</div>
	<%= render "recipe_bar" %>
</div>
<div class="action-cntnt recipe-cntnt">
  <div class="actions-cntnr">
		<%= render "layouts/loading_url" %>
    <div class="rec-cntnr">
			<div class="public-form">
				<%= render 'recipes/public_form', recipe: @recipe %>
			</div>
			<div class="recipe-links">
				<%= link_to edit_recipe_path(@recipe, format: :pdf), target: '_blank' do %>
					<%= image_tag 'pdf.png' , class: 'mini-mini-img'%> AperÃ§u PDF
				<% end %>
				<a href="#" class="email-sender">
					<%= image_tag 'send-button.png' , class: 'mini-mini-img'%> Partager
				</a>
			</div>
      <%= render "recipes/show", recipe: @recipe %>
    </div>
  </div>
</div>
<div class="select-measure popover-bck email-pop" style="display:none;">
	<div class="popover">
		<div class="popover-ttl">
			<h3><%= image_tag "send-button-w.png", class: "mini-mini-img" %> Partager ma recette par email</h3>
		</div>
		<div class="popover-cntnt">
			<%= render "messages/new", recipe: @recipe, user: @user %>
		</div>
	</div>
</div>
