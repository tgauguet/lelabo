<% title "#{@recipe.name.humanize}" %>
<div class="actions-cntnr">
 	<div class="action-cntnr">
 		<%= link_to balancing_recipe_path(@recipe) do %>
 			<p class="cta-btn">Equilibrer</p>
 		<% end %>
 		<%= link_to production_cost_recipe_path(@recipe) do %>
 			<p class="cta-btn">Co√ªt de revient</p>
 		<% end %>
		<p id="notice"><%= notice %></p>
		<h2><%= @recipe.name.humanize %></h2>
		<p><%= @recipe.note %></p>
		<p><%= @recipe.author %></p>
		<p><%= image_tag @recipe.image %></p>
		<p><%= @recipe.baking %></p>
		<p><%= @recipe.category %></p>
		<br/>
		<p><%= raw(@recipe.process) %></p>
		<br/>
		<p>Ingredients:</p>
		<ul>
			<% @recipe.quantities.each do |ingredient| %>
				<li><%= ingredient.ingredient.name %>&nbsp;<%= ingredient.weight %>kg</li>
			<% end %>
		</ul>
		<p>Cout de revient : <%= number_to_currency @recipe.total_price %></p>
		<br/>
		<%= link_to 'Modifier', edit_recipe_path(@recipe) %> |
		<%= link_to 'Retour', recipes_path %>
	</div>
</div>
