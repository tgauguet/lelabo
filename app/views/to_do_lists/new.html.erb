<% title "Organisation" %>
<div class="ttl-header">
	<div class="page-ttl">
		<h1 class="lttl-intro-h1">Organisation</h1>
	</div>
	<div class="page-ctas">
		<p class="inside-btn ingredient-btn" id="list-btn">+ NOUVELLE LISTE</p>
	</div>
</div>
<div class="actions-cntnr">
		<div class="title-cntnr">
			<% if empty_list %>
				<div class="explaination-cntnr">
					<h2>Quand utiliser les listes de tâches ?</h2>
					<div class="border-btm"></div>
					<p>Pour noter toutes les tâches qui vous viennent à l'esprit</p>
					<div class="border-btm"></div>
					<p>Pour définir vos objectifs de production</p>
					<div class="border-btm"></div>
					<p>Pour assigner du travail à vous ou à votre équipe</p>
				</div>
			<% end %>
		</div>
		<div class="simple-form-cntnr">
			<div class="smpl2-cntnr">
				<%= form_for @list do |f| %>
					<%= f.hidden_field :user_id, value: @user.id %>
					<%= image_tag "title.png", class: "field-img2" %>
					<%= f.text_field :title, placeholder: "Titre", required: true, class: "basic-field top-field"  %>
					<%= image_tag "description.png", class: "field-img2" %>
					<%=	f.text_area :description, placeholder: "Description", class: "basic-field bottom-field" %>
					<%= f.submit "AJOUTER LA LISTE", class: "btn inside-btn" %>
					<p class="cancel-btn">ANNULER</p>
				<% end %>
			</div>
		</div>
		<%= render "to_do_lists/lists", lists: @lists %>
</div>
