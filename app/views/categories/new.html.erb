<% title "Catégories" %>
<div class="actions-cntnr">
	<div class="page-new-ttl action-cntnr categories">
    <h2>NOUVELLE CATÉGORIE</h2>
    <div class="cat-form">
      <%= form_for @category do |f| %>
				<p>Nom</p>
        <%= f.text_field :name, placeholder: "Légumes, Bonbons...", class: "basic-field rounded-field" %>
        <%= f.submit "ENREGISTRER", class: "auto-btn cta-btn" %>
      <% end %>
    </div>
	</div>
	<div class="page-new-ttl action-cntnr categories">
    <ul>
      <% @categories.each do |c| %>
        <li>
          <%= c.name %>
          <%= link_to "Supprimer", category_path(c.id), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
