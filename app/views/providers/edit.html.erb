<% title "Modifier #{@provider.name.humanize}" %>
<div class="rgt-menu">
	<div class="rgt-area">
		<div class="rgt-area-ttl">
			<h3>Fournisseurs</h3>
			<div>
				<%= link_to new_provider_path do %><p class="add"><%= image_tag "add.png", class: "mini-img" %></p><% end %>
				<p><%= image_tag "sort-img.png", class: "mini-img" %></p>
			</div>
		</div>
		<ul>
			<% @providers.each do |p| %>
				<%= link_to edit_provider_path(p.id) do %>
					<li>
						<%= p.name %>
					</li>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
<div class="ttl-header action-rgt-ttl">
	<div class="page-ttl">
		<h1 class="lttl-intro-h1"><%= @provider.name %></h1>
		<p class="lft-p">Informations sur le fournisseur</p>
	</div>
	<div class="page-ctas">
		<%= link_to new_to_do_list_path do %>
			<p class="inside-btn ingredient-btn"><%= image_tag "arrow-left.png", class: "btn_arrow" %> INDEX</p>
		<% end %><br/>
	</div>
</div>
<div class="action-cntnt action-rgt">
	<div class="actions-cntnr to-do-cntrn">
		<div class="tasks-cntnr">
			<div class="provider-ingredients">
				<h3>Ingrédients liés</h3>
				<% if @provider.provider_prices %>
					<% @provider.provider_prices.each do |p| %>
						<%= link_to edit_ingredient_path(p.ingredient_id) do %>
							<ul>
								<li><%= @user.ingredients.find(p.ingredient_id).name.humanize %></li>
							</ul>
						<% end %>
					<% end %>
				<% end %>
				<% if @provider.provider_prices.count == 0 %>
					<p>Aucun ingrédients liés à ce fournisseur</p>
				<% end %>
			</div>
			<%= render "form", provider: @provider %>
		</div>
	</div>
</div>
