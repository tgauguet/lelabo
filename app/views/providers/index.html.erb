<% title "Fournisseurs" %>
<div class="ttl-header">
	<div class="page-ttl">
		<h1 class="lttl-intro-h1">Fournisseurs</h1>
		<p class="lft-p">Index des fournisseurs</p>
	</div>
	<div class="page-ctas">
		<%= link_to new_provider_path do %>
			<p class="standard-btn grey-btn ingredient-btn">+ NOUVEAU FOURNISSEUR</p>
		<% end %>
		<div>
			<p><%= image_tag "sort-img.png", class: "mini-img" %></p>
		</div>
	</div>
</div>
<div class="sort-ttl-cntnr">
	<div class="list-width">
		<p class="major-td"><%= sortable "NOM", "name" %></p>
		<p class="basic-td">EMAIL</p>
		<p class="basic-td">SITE WEB</p>
	</div>
</div>
<div class="action-cntnt action-plus-list">
	<div class="list-cntnr">
		<div class="list-width">
			<% if @user.basic_user? %>
				<div class="page-new-ttl action-cntnr">
					<p>Choisissez l'offre PRO ou ENTREPRISE et profitez de cette fonctionnalit√© !</p>
					<%= link_to subscriptions_path do %>
						<p class="auto-btn cta-btn">+ S'ABONNER</p>
					<% end %>
				</div>
			<% else %>
				<div class="hide">
							<ul>
								<li id="sortable1">
									<% unless @providers.nil? %>
										<%= render @providers %>
									<% end %>
								</li>
							</ul>
					</div>
				</div>
			<% end %>
		</div>
		<%= will_paginate %>
	</div>
</div>
