}

/*  small buttons  */

.cancel-btn, .social-btn, .inside-btn, .auto-btn{
  border: none;
  border-radius: 0.3em;
  padding-top: 0.5em;
  padding-bottom: 0.5em;
  padding-right: 1.5em;
  padding-left: 1.5em;
  cursor: pointer;
  font-size: 1em;
}

.cancel-btn:hover{
	background: rgb(208, 64, 67); /* red color for buttons */
}

/*   absolute properties   */

.blog-btn, .cta-btn, button, .inside-btn, .btn, button{
  border-radius: 0.3em;
  opacity: 0.9;
}

.blog-btn:hover, .cta-btn:hover, button:hover, .inside-btn:hover, .btn:hover, button:hover, .plan-btn:hover{
  opacity: 1;
}

.blog-btn, .cta-btn, button, .inside-btn, .btn, button, .plan-btn, .delete-btn-cntnr:hover, .cancel-btn{
  color: white;
}

/*   buttons with a green background  */

.blog-btn, .cta-btn, button, .inside-btn, .inside-btn, .data-confirm .confirm-true{
  background: rgb(54, 201, 124);
}

/*   buttons with a red background */

.data-confirm .confirm-false{
  background: #EB4E5C;
  cursor: pointer;
  border-bottom: 2px solid #C6434C;
}

/*   inline-block buttons  */

.social-btn,.cancel-btn, .inside-btn{
  display: inline-block;
  width: auto;
}

/*  Button for feedbacks  */

